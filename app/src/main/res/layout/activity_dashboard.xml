<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="#FFFFFF">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Daily Expense"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:elevation="5.1dp"
        android:background="@drawable/transperent_btn"
        android:drawableTop="@drawable/ic_monetization_on_black_24dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/topCardView"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/curve1"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dashboardBtn"
                android:onClick="dashboardBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Dashboard"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:background="@drawable/transperent_btn"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:background="#000000"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/expenseBtn"
                android:onClick="expenseBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Expenses"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:background="@drawable/transperent_btn"/>

        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>


    <FrameLayout
        android:layout_marginTop="15dp"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topCardView" />



</RelativeLayout>